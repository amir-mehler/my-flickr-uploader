#!/usr/bin/env ruby

unless RUBY_VERSION.match(/^2\./)
  puts "Better use ruby 2.*"
  exit 1
end

require 'trollop'
opts = Trollop::options do
  banner <<-EOS
Flickr Uploader!

Usage:
       start_uploader --user <amir> (file must exist here: config/amir.yml)

EOS
  opt :user, "Yahoo! user name (without @yahoo.*)", :type => :string, :required => true
end
conf_file = File.expand_path("../../config/#{opts[:user]}.yml",__FILE__)

$: << File.expand_path("../../lib",__FILE__)

Dir.chdir(File.expand_path("../../",__FILE__)) do
  require "bundler/setup"
end

require 'uploader'

# Parse all photos in flickr and check that each photo ID has a DB entry
# If one doesn't; download it and write it's hash sum to the DB.

begin
  fp = Uploader::FingerPrint.new conf_file
  fp.fix_em_all!
ensure
  fp && fp.close_db
end